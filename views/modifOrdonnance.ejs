<%- include('header') %>
    <div> Bienvenue sur la page de modification des Ordonnances </div>


    <div> modifier l' Ordonnance nÂ° <%=ordonnance[0].ordonnance_numsecu%>
    </div>
    <form action="/patients/ordonnances/modifier" method="POST" enctype="application/x-www-formurlencoded">
        
        <input hidden type="number" name="numsecu" id="numsecu" value="<%=ordonnance[0].ordonnance_patient_numsecu%>" required>

        <label for="medecin">Medecin : </label>
        <select name="medecin" id="medecin">

            <% medecins.forEach(function(user){ if(user.medecin_id==ordonnance[0].ordonnance_medecin_id) { %>
                <option value="<%= user.medecin_id %>" selected><%= user.medecin_nom %></option>
                <% } else {%>
                    <option value="<%= user.medecin_id %>">
                        <%= user.medecin_nom %>
                    </option>
                    <% }})%>


        <label for="pathologie">Mutuelle : </label>
        <select name="pathologie" id="pathologie">
            <option value="null">Pas de pathologie</option>

            <% pathologies.forEach(function(user){ if(user.pathologie_id==ordonnance[0].ordonnance_pathologie_id) { %>
                <option value="<%= user.pathologie_id %>" selected><%= user.pathologie_nom %></option>
                <% } else {%>
                    <option value="<%= user.pathologie_id %>">
                        <%= user.pathologie_nom %>
                    </option>
                    <% }})%>




        </select>
        <button type="submit">Modifier</button>
    </form>
    