<%- include('header') %>
    <div> Bienvenue sur la page des ordonnances </div>

    <a id="attention"></a>

    <h1>Ordonnances de</h1>
    <li>nom : <%= infospatient[0].patient_nom.toUpperCase() %> prenom : <%= infospatient[0].patient_prenom %> Date de
                naissance : <%= infospatient[0].patient_journaiss %>/<%= infospatient[0].patient_moisnaiss %>/<%=
                            infospatient[0].patient_anneenaiss %> Age : <%= new Date().getFullYear() -
                            infospatient[0].patient_anneenaiss %> ans Numéro Sécu : <%=
                            infospatient[0].patient_numsecu %>
    </li>

    <% if (ordonnances.length > 0) { %>





        <% ordonnances.forEach(function(user,i){ %>
            <li>
                <button
                    onClick="location.href='http://localhost:3000/patients/ordonnances/<%=infospatient[0].patient_numsecu %>/posologies/<%=user.ordonnance_id%>';">Posologies</button>



                <button
                    onClick="location.href='http://localhost:3000/medecins/modifier/<%=user.medecin_id%>';">Medecin</button>



                <button
                    onClick="location.href='http://localhost:3000/patients/ordonnances/<%=user.patient_numsecu%>/modifier/<%=user.ordonnance_id%>';">Modifier</button>


                <button onclick="popupAttentionOn<%= i+1 %>()">Supprimer</button>
                <script>
                    function popupAttentionOn<%= i+1 %> () {
                        document.getElementById("attention").innerHTML = `Supprimer une ordonnance supprimera ses posologies <button onClick="location.href='http://localhost:3000/patients/ordonnances/<%=user.patient_numsecu%>/supprimer/<%=user.ordonnance_id%>';">oui</button>   ||  <button onClick="popupAttentionOff()">non</button>`
                    }
                </script>

                <strong>
                    N°Ordonnance : <%= user.ordonnance_id %>
                        Médecin : <%= user.medecin_nom.toUpperCase() %>
                            <%= user.medecin_prenom %>
                                Tel : <a href="telto:<%= user.medecin_tel %>">
                                    <%= user.medecin_tel %>
                                </a>
                                Mail : <a href="mailto:<%= user.medecin_email %>">
                                    <%= user.medecin_email %>
                                </a>
                                Pathologie : <%= user.pathologie_nom %>
                </strong>
            </li>
        <% })%>
    <% } %>


                    <div> Ajouter une Ordonnance </div>

                    <form action="/patients/ordonnances/ajouter" method="POST"
                        enctype="application/x-www-formurlencoded">

                        <div>

                            <input hidden type="number" name="numsecu" id="numsecu"
                                value="<%= patient_numsecu %>" required>

                            <label for="medecin"> Medecin : </label>
                            <select name="medecin" id="medecin" required>

                                <option value="" selected disabled>Choisir un Médecin</option>
                                <% medecins.forEach(function(user){ %>
                                    <option value="<%= user.medecin_id %>">
                                        <%= user.medecin_prenom %>
                                            <%= user.medecin_nom.toUpperCase() %>
                                    </option>
                                    <% })%>
                            </select>

                            <label for="pathologie"> Pathologie : </label>
                            <select name="pathologie" id="pathologie" required>

                                <option value="" selected disabled>Choisir une pathologie</option>
                                <% pathologies.forEach(function(user){ %>
                                    <option value="<%= user.pathologie_id %>">
                                        <%= user.pathologie_nom %>
                                    </option>
                                    <% })%>
                            </select>


                            <button type="submit">Ajouter</button>
                        </div>
                    </form>

                    <script>
                        function popupAttentionOff() {
                            document.getElementById("attention").innerHTML = ""
                        }
                    </script>